<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".MainActivity">

	<Button
		android:id="@+id/lanzarButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginLeft="16dp"
		android:layout_marginTop="16dp"
		android:layout_marginBottom="16dp"
		android:text="@string/lanzarButtonText"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toStartOf="@+id/iteracionLabel"
		app:layout_constraintHorizontal_bias="0.5"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/iteracionView"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:textSize="24sp"
		app:layout_constraintBottom_toBottomOf="@+id/lanzarButton"
		app:layout_constraintEnd_toEndOf="@+id/iteracionLabel"
		app:layout_constraintStart_toStartOf="@+id/iteracionLabel"
		app:layout_constraintTop_toTopOf="@+id/lanzarButton" />

	<EditText
		android:id="@+id/iteracionLabel"
		android:layout_width="115dp"
		android:layout_height="43dp"
		android:layout_marginStart="16dp"
		android:layout_marginLeft="16dp"
		android:layout_marginBottom="8dp"
		android:ems="10"
		android:inputType="textPersonName"
		android:text="@string/iteracionEtiquetaText"
		app:layout_constraintBottom_toTopOf="@+id/iteracionView"
		app:layout_constraintEnd_toStartOf="@+id/resultadoLabel"
		app:layout_constraintHorizontal_bias="0.5"
		app:layout_constraintStart_toEndOf="@+id/lanzarButton" />

	<TextView
		android:id="@+id/resultadoView"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:textSize="24sp"
		app:layout_constraintBottom_toBottomOf="@+id/lanzarButton"
		app:layout_constraintEnd_toEndOf="@+id/resultadoLabel"
		app:layout_constraintStart_toStartOf="@+id/resultadoLabel"
		app:layout_constraintTop_toTopOf="@+id/lanzarButton" />

	<EditText
		android:id="@+id/resultadoLabel"
		android:layout_width="99dp"
		android:layout_height="43dp"
		android:layout_marginStart="16dp"
		android:layout_marginLeft="16dp"
		android:layout_marginEnd="16dp"
		android:layout_marginRight="16dp"
		android:layout_marginBottom="8dp"
		android:ems="10"
		android:inputType="textPersonName"
		android:text="@string/resultadoEtiquetaText"
		app:layout_constraintBottom_toTopOf="@+id/resultadoView"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.5"
		app:layout_constraintStart_toEndOf="@+id/iteracionLabel" />

</androidx.constraintlayout.widget.ConstraintLayout>